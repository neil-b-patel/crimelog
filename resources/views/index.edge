<body>
    <h1>Select a chart type using the dropdown list.</h1>
    <h1>This will visualize the type and frequency of the last sixty crimes on Davidson College's campus.</h1>

    <label for="charts">Choose a chart type:</label>

    <select name="charts" id="charts">
    <option value="bar">Bar</option>
    <option value="bubbles">Bubbles</option>
    </select>

    <script id="wrapper"></script>

    <script>
        function GetSelectedValue() {
            let e = document.getElementById("charts");
            let result = e.options[e.selectedIndex].value;
            
            let script = document.createElement("script");
            script.setAttribute("src", "../public/" + result + ".js");
            document.body.appendChild(script);
        }
    </script>

</body>

